<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/homepage">

            <TextView
                android:id="@+id/welcome_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/noto_serif_semibold"
                android:maxLines="1"
                android:paddingStart="16dp"
                android:paddingTop="16dp"
                android:text="Welcome, Username"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/hamburger_icon"
                app:layout_constraintEnd_toStartOf="@id/hamburger_icon"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/hamburger_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="8dp"
                android:contentDescription="Open menu"
                android:src="@drawable/ic_menu"
                android:clickable="true"
                android:focusable="true"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <LinearLayout
                android:id="@+id/upcoming_appointment_card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/form_background"
                android:clickable="true"
                android:focusable="true"
                android:orientation="vertical"
                android:padding="16dp"
                android:visibility="gone"
                tools:visibility="visible"
                app:layout_constraintTop_toBottomOf="@id/welcome_text"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp">

                <TextView
                    android:id="@+id/upcoming_appointment_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Upcoming Appointment"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/upcoming_appointment_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="25/08/2025"
                    android:textColor="#666666"
                    android:textSize="16sp" />
            </LinearLayout>

            <include
                android:id="@+id/accepted_request_card_include"
                layout="@layout/card_accepted_request"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/upcoming_appointment_card"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <LinearLayout
                android:id="@+id/pending_request_card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/form_background"
                android:clickable="true"
                android:focusable="true"
                android:orientation="vertical"
                android:padding="16dp"
                android:visibility="gone"
                tools:visibility="visible"
                app:layout_constraintTop_toBottomOf="@id/accepted_request_card_include"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp">

                <TextView
                    android:id="@+id/pending_request_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pending Caregiver Request"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/pending_request_summary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Pet Type: Dog, Location: Kathmandu"
                    android:textColor="#666666"
                    android:textSize="16sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/caregiver_requests_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:text="Pending requests..."
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/accepted_request_card_include" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/caregiverRequestsRecyclerView"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:visibility="gone"
                app:layout_constraintBottom_toTopOf="@id/button_container"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/caregiver_requests_title"
                tools:listitem="@layout/item_caregiver_request" />

            <TextView
                android:id="@+id/no_requests_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text=""
                android:textSize="18sp"
                android:textStyle="italic"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/upcoming_appointment_card" />

            <LinearLayout
                android:id="@+id/button_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="32dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <Button
                    android:id="@+id/buttonVetAppointment"
                    android:layout_width="140dp"
                    android:layout_height="90dp"
                    android:layout_marginEnd="16dp"
                    android:backgroundTint="#964B00"
                    android:textColor="@android:color/white"
                    android:drawableTop="@drawable/doctor"
                    android:text="Book vet appointment"
                    android:gravity="center"
                    android:paddingTop="8dp"
                    android:background="@drawable/rounded_button_blue"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/buttonSearchCaregiver"
                    android:layout_width="140dp"
                    android:layout_height="90dp"
                    android:layout_marginStart="16dp"
                    android:backgroundTint="#964B00"
                    android:textColor="@android:color/white"
                    android:drawableTop="@drawable/search"
                    android:text="Search caregiver"
                    android:gravity="center"
                    android:paddingTop="8dp"
                    android:background="@drawable/rounded_button_blue"
                    android:textSize="14sp" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        app:menu="@menu/drawer_menu"
        android:background="@android:color/white"/>

</androidx.drawerlayout.widget.DrawerLayout>