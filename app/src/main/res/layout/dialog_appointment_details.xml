<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/form_background"
    android:elevation="6dp"
    android:layout_margin="16dp">

    <TextView
        android:id="@+id/titleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Appointment Details"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#1B6FE4"
        android:gravity="center"
        android:paddingBottom="16dp" />

    <TextView
        android:id="@+id/textPetType"
        style="@style/DetailTextStyle"
        android:text="Pet Type:" />

    <TextView
        android:id="@+id/textServiceType"
        style="@style/DetailTextStyle"
        android:text="Service:" />

    <TextView
        android:id="@+id/textPetCondition"
        style="@style/DetailTextStyle"
        android:text="Condition:" />

    <TextView
        android:id="@+id/textOwnerName"
        style="@style/DetailTextStyle"
        android:text="Owner:" />

    <TextView
        android:id="@+id/textPhone"
        style="@style/DetailTextStyle"
        android:text="Phone:" />

    <TextView
        android:id="@+id/textDate"
        style="@style/DetailTextStyle"
        android:text="Date:"
        android:paddingBottom="24dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/buttonEditAppointment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Edit Appointment"
            android:layout_marginEnd="8dp"
            android:textColor="@color/white"
            android:padding="15dp"
            android:backgroundTint="#964B00"/>

        <Button
            android:id="@+id/buttonDeleteAppointment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Delete Appointment"
            android:layout_marginStart="8dp"
            android:textColor="@color/white"
            android:padding="15dp"
            android:backgroundTint="#964B00" />

    </LinearLayout>

    <Button
        android:id="@+id/buttonCompleteAppointment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Mark as Complete"
        android:textColor="@color/white"
        android:padding="14dp"
        android:backgroundTint="#4CAF50" />

</LinearLayout>