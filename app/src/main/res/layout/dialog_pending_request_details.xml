<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="24dp"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pending Caregiver Request Details"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingBottom="16dp"
            android:textColor="@android:color/black"
            android:gravity="center" />

        <TextView
            android:id="@+id/labelPetType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pet Type:"
            android:textStyle="bold"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textPetType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dog"
            android:paddingBottom="12dp"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/labelPetAge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pet Age:"
            android:textStyle="bold"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textPetAge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3"
            android:paddingBottom="12dp"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/labelSpecialNeeds"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Special Needs:"
            android:textStyle="bold"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textSpecialNeeds"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="None"
            android:paddingBottom="12dp"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/labelOwnerContact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Owner Contact:"
            android:textStyle="bold"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textOwnerContact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+977-98XXXXXXXX"
            android:paddingBottom="12dp"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/labelLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Location:"
            android:textStyle="bold"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kathmandu, Nepal"
            android:paddingBottom="12dp"
            android:textSize="16sp" />

    </LinearLayout>

</ScrollView>
